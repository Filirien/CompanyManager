@model EditCompanyViewModel

@{
    ViewData["Title"] = "Edit";
}


<div class="row">
    <div class="box">
        <h2>@ViewData["Title"]</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Headquarters"></label>
                <input asp-for="Headquarters" class="form-control" />
                <span asp-validation-for="Headquarters" class="text-danger"></span>
            </div>
            <br />

            <table class="table">
                <tr>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>Experience Level</th>
                    <th>Starting Date</th>
                    <th>Salary</th>
                    <th>Vacation Days</th>
                    <th>Actions</th>
                </tr>
                @foreach (var employee in Model.Employees)
                {
                    <tr>
                        <td>@employee.FirstName</td>
                        <td>@employee.LastName</td>
                        <td>@employee.ExperienceLevel</td>
                        <td>@employee.StartingDate.ToShortDateString()</td>
                        <td>@employee.Salary</td>
                        <td>@employee.VacationDays</td>
                        <td>
                            <a href="/employees/edit/@employee.Id" class="btn btn-warning">Edit</a>
                            <a href="/employees/delete/@employee.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this?')">Delete</a>
                        </td>
                    </tr>
                }
                <tfoot>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>
                            <a href="/employees/add/@Model.Id" class="btn btn-success">Add Employee</a>
                        </td>
                    </tr>
                </tfoot>
            </table>
            <button type="submit" class="btn btn-success">Edit</button>
            <a href="/companies/all" class="btn btn-default">Back</a>
        </form>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
